set localconfig
let configpath = '/home/username/.cvimrc'
let barposition = "bottom"
set numerichints
set typelinkhints
set nohud
set nosmoothscroll
set noautofocus
set nolinkanimations
set ignorecase
set smartcase

let searchengine yubnub = "http://yubnub.org/parser/parse?command=%s"
let searchalias y = "yubnub"
let mapleader = ","

unmap <C-w>
map <C-n> nextTab
map <C-p> previousTab
map <C-d> scrollPageDown
map <C-u> scrollPageUp
map <C-f> scrollFullPageDown
map <C-b> scrollFullPageUp
map d closeTab
map u lastClosedTab
map R reloadTabUncached
map gu :viewsource!<cr>
map gU goToRootUrl
map <C-j> <cr>
map <C-c> <esc>

map <leader>e :tabnew chrome://extensions<cr>
map <leader>s :tabnew chrome://settings<cr>

